{{!
    @template bbbext_bnemail/subscriptions

    This template renders the mobile page.

    Example context (json):
    {
      "instances": [
            {
              "id": "10",
              "name": "dqsdsq",
              "toggle": {
                "name": "state",
                "method": "get",
                "url": "https://moodle.com",
                "cmid": "4",
                "name": "state",
                "id": "reality-toggle-3",
                "checked": true,
                "disabled": false,
                "label": "Enable/disable reality",
                "labelclasses": "sr-only"
              },
              "subscribed": true
            }
        ]
    }
}}
<div class="bbbext_bnemail_subscriptions">
    <div class="card-header">
        <h5 class="card-title">{{#str}}subscriptions, bbbext_bnemail{{/str}}</h5>
    </div>
    <div class="card-body">
        <div class="d-flex flex-column">
            {{#instances}}
                <div class="d-flex m-3 justify-content-between">
                    <div class="align-self-start">
                        <a class="align-self-start" href="{{url}}">{{name}}</a>
                        {{#subscribed}}
                            {{#pix}} i/checked, core, {{#str}}subscribed, bbbext_bnemail{{/str}}{{/pix}}
                        {{/subscribed}}
                        {{^subscribed}}
                            {{#pix}} e/cancel, core, {{#str}}unsubscribed, bbbext_bnemail{{/str}}{{/pix}}
                        {{/subscribed}}
                    </div>
                    <div class="align-self-end">
                        {{#toggle}}
                          <form action="{{url}}" method="get" onchange="this.submit();">
                            <div class="custom-control custom-switch">
                              <input type="hidden" name="cmid" value="{{cmid}}" />
                              {{#subscribed}}
                                <input type="hidden" name="{{name}}" value="0" />
                              {{/subscribed}}
                              <input type="checkbox" class="custom-control-input" name="{{name}}" value="{{value}}" id="{{$id}}{{id}}{{/id}}"
                                {{#checked}}checked{{/checked}}
                                {{#disabled}}disabled{{/disabled}}>
                              {{$labelmarkup}}
                                <label class="custom-control-label" for="{{$id}}{{id}}{{/id}}">
                                    <span class="col">{{$label}}{{label}}{{/label}}</span>
                                </label>
                              {{/labelmarkup}}
                            </div>
                          </form>
                        {{/toggle}}
                    </div>
                </div>
            {{/instances}}
        </div>
    </div>
</div>
